{
  "expo": {
    "name": "Creative Moose",
    "slug": "creative-moose",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "creative-moose",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/37ccf6b9-14c2-4ac7-9cec-611eafa16d5a"
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0a0a"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.barkingcode.creativemoose",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Creative Moose needs camera access to take photos for AI generation",
        "NSPhotoLibraryUsageDescription": "Creative Moose needs photo library access to select images for AI generation",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "package": "com.barkingcode.creativemoose",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f0a0a"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-web-browser",
      "expo-apple-authentication",
      "expo-updates",
      "expo-system-ui",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Creative Moose to use Face ID for secure authentication"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#0f0a0a"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Creative Moose needs camera access to take photos for AI generation"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Creative Moose needs photo library access to select images for AI generation"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Creative Moose needs access to save generated photos to your library",
          "savePhotosPermission": "Creative Moose needs permission to save generated photos",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "37ccf6b9-14c2-4ac7-9cec-611eafa16d5a"
      }
    },
    "owner": "barkingcode"
  }
}
